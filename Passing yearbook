def findSignatureCounts(arr):
  n= (len(arr))+1
  ans = [0] * (n)
  print("n=",n-1, "array=",arr)
  for i in range(1,n):
    print("i=",i)
    if i!=0:
        if i==arr[i-1]:
           ans[i]=1
        else:
           print(i,"!=",n-1)
           ans[i]=1*(n-1)
        print("so book",i,"has",ans[i],"signatures")
        
    #print(i,ans)
  return ans
findSignatureCounts([1,2])
